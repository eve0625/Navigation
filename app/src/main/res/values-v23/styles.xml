<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/main_red</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item> <!-- 상태바 아래에 다른 뷰가 표시될 수 있도록 함 -->
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- 상태바 색상 설정 -->
        <item name="android:windowLightStatusBar">true</item> <!-- 상태바 컨텐츠의 색상을 어둡게 설정 -->
    </style>

</resources>